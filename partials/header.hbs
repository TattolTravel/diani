<header class="relative h-20 border-b border-solid border-slate-300">
    <div id="container" class="block w-full h-full mx-auto px-6 md:px-20">
        <div id="header-logo" class="h-full block left w-2/5">  
            {{#if @site.logo}}
            <img src="{{@site.logo}}" alt="{{@site.title}}">
            {{else}}
            {{/if}}
            <a class="text-2xl">
                {{@site.title}}
            </a>
            
        </div>
        <nav id="header-nav" class="block right bg-red-300 ">
            <button class="gh-search gh-icon-btn" aria-label="Search this site" data-ghost-search>{{>"icons/search"}}
            </button>
            <button class="gh-burger"></button>
        </nav>
    </div>     
</header>